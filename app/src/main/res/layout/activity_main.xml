<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:gravity="center"
    android:background="@drawable/fond"
    tools:context="MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shape">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textSize="26dp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/number1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>

        <EditText
            android:id="@+id/number2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <Button
                android:id="@+id/button_add"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:backgroundTint="@color/add"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:onClick="add"
                android:layout_marginHorizontal="5dp"/>

            <Button
                android:id="@+id/button_substract"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:backgroundTint="@color/substract"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:onClick="substract"
                android:layout_marginHorizontal="5dp"/>

            <Button
                android:id="@+id/button_divide"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="/"
                android:backgroundTint="@color/divide"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:onClick="divide"
                android:layout_marginHorizontal="5dp"/>

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="x"
                android:backgroundTint="@color/multiply"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:onClick="multiply"
                android:layout_marginHorizontal="5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RÃ©sultat"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>